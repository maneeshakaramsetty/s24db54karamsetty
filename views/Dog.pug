extends layout

block content
  h1= title

  - let Dog = results

  .container-fluid
    .row
      each f, index in results 
        .col-sm-2.DogAttr(onclick=`buy(${index})`)
          | #{f.Dog_Type}, #{f.Name}, #{f.Age}, #{f.Color}
          
  script.
    function buy(index) {
      alert(`Your purchased Dog: ${index+1}`);
    }
  style.
    .DogAttr {
      background-color: aquamarine;
      width: 120px;
    }
